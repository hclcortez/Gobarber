 {% extends "_layouts/auth.njk" %}

 {% block body %}
   <form action="/signup" method="POST" enctype="multipart/form-data">
  {% include "_partials/flash.njk" %}

    <label for="avatar">
      <img src="/images/avatar.svg"  height="24">
    </label>

    <input type="file" id="avatar" name="avatar">

    <input type="text" name="name" placeholder="Nome Completo">
    <input type="email" name="email" placeholder="Seu e-email">
    <input type="password" name="password" placeholder="Senha secreta">

    <label for="provider">
      <input type="checkbox" id="provider" name="provider" value="1">
      Sou cabelereiro
    </label>

    <button type="submit">Criar conta</button>

    <a href="/">JÃ¡ possuo conta</a>
  </form>

  <script type="text/javascript">
  let avatarInput = document.getElementById('avatar')
  let img = document.querySelector('label[for=avatar] img')

  avatarInput.onchange = e => {
    img.classList.add('preiew')
    img.src = URL.createObjectURL(e.target.files[0])
  }
  </script>
 {% endblock %}
